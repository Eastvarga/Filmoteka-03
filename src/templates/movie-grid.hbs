{{#each this}}
<li class="movie-grid__item">
    <a href="#">
        <img src={{this.poster_path}} alt="movie-cover" />
        <h2 class="movie-grid__title">{{this.original_title}}</h2>
        <p class="movie-grid__info">
            {{#each this.genre_ids}}
            <span>{{this}}</span>
            {{/each}}
            ,{{this.release_date}}</p>
    </a>
</li>
{{/each}}
